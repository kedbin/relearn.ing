---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { ArrowLeft, ArrowUpRight, Github, Calendar, Code2, Link, ArrowRight } from 'lucide-react';
import AudioPlayer from '../../components/AudioPlayer';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={project.data.title}>
  <section class="pt-28 pb-24 px-6 min-h-screen bg-slate-950">
    <div class="max-w-4xl mx-auto">
      <a
        href="/projects"
        class="group flex items-center gap-2 text-slate-400 hover:text-brand-300 transition-colors mb-10"
      >
        <ArrowLeft className="w-4 h-4 group-hover:-translate-x-1 transition-transform" />
        Back to Projects
      </a>

      {/* Header Section */}
      <div class="mb-12 border-b border-slate-800/60 pb-8">
        <div class="flex flex-wrap items-center gap-4 mb-6 text-sm">
          <div class="flex items-center gap-2 text-brand-300 font-medium bg-brand-500/10 px-3 py-1 rounded-full border border-brand-500/20">
             <Calendar className="w-3.5 h-3.5" />
             <span>{project.data.date}</span>
          </div>
        </div>

        <h1 class="text-3xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-6 leading-[1.1] tracking-tight">
          {project.data.title}
        </h1>

        <p class="text-xl md:text-2xl text-slate-300 leading-relaxed font-light max-w-3xl">
          {project.data.description}
        </p>
      </div>

      <div class="grid lg:grid-cols-[1fr_300px] gap-12 items-start">
        
        {/* Mobile Metadata (Top) */}
        <div class="lg:hidden mb-8 space-y-6">
          {/* Mobile Audio Player */}
          {project.data.audioUrl && (
            <AudioPlayer src={project.data.audioUrl} title="Listen to Overview" client:load />
          )}

           <div class="bg-slate-900/40 border border-slate-800 rounded-2xl p-6">
            <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
              <Link className="w-4 h-4 text-brand-400" />
              Project Links
            </h3>
            <div class="flex flex-col gap-3">
              {project.data.demoUrl && (
                <a href={project.data.demoUrl} target="_blank" rel="noreferrer" 
                   class="flex items-center justify-center gap-2 px-4 py-2 bg-brand-600 hover:bg-brand-500 text-white font-semibold rounded-lg transition-colors text-sm">
                  <span>View Live Demo</span>
                  <ArrowUpRight className="w-4 h-4" />
                </a>
              )}
              {project.data.repoUrl && (
                <a href={project.data.repoUrl} target="_blank" rel="noreferrer" 
                   class="flex items-center justify-center gap-2 px-4 py-2 bg-slate-800 hover:bg-slate-700 text-white font-semibold rounded-lg transition-colors border border-slate-700 text-sm">
                  <Github className="w-4 h-4" />
                  <span>Source Code</span>
                </a>
              )}
            </div>
          </div>
          
           <div class="bg-slate-900/40 border border-slate-800 rounded-2xl p-6">
            <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
              <Code2 className="w-4 h-4 text-brand-400" />
              Tech Stack
            </h3>
            <div class="flex flex-wrap gap-2">
              {project.data.techStack.map(tech => (
                 <span class="text-xs font-medium text-slate-300 bg-slate-800/50 px-2.5 py-1 rounded-md border border-slate-700/50">
                    {tech}
                 </span>
              ))}
            </div>
          </div>
        </div>

        {/* Main Content */}
        <article class="min-w-0 prose prose-lg prose-invert prose-slate max-w-none 
            prose-headings:font-display prose-headings:font-bold prose-headings:text-white
            prose-h2:text-3xl prose-h2:mt-24 prose-h2:mb-12 prose-h2:pb-6 prose-h2:border-b prose-h2:border-slate-800/50 prose-h2:ml-0 prose-h2:pl-0
            prose-h3:text-2xl prose-h3:text-brand-100 prose-h3:mt-16 prose-h3:mb-8
            prose-p:text-slate-300 prose-p:leading-9 prose-p:mb-12
            prose-a:text-brand-400 prose-a:no-underline hover:prose-a:underline
            prose-strong:text-white prose-strong:font-semibold
            prose-li:text-slate-300 prose-li:marker:text-brand-500 prose-li:mb-6
            prose-blockquote:border-l-brand-500 prose-blockquote:bg-slate-900/50 prose-blockquote:py-6 prose-blockquote:px-8 prose-blockquote:rounded-r-lg prose-blockquote:not-italic prose-blockquote:text-slate-400 prose-blockquote:mb-12
            prose-pre:bg-slate-900 prose-pre:border prose-pre:border-slate-800
            [&>h2:first-child]:!mt-0 [&>*:first-child]:!mt-0
          ">
           <Content />
        </article>

        {/* Sidebar (Desktop) */}
        <aside class="hidden lg:block sticky top-32 space-y-8">
          {/* Audio Player - shown if audioUrl exists */}
          {project.data.audioUrl && (
            <AudioPlayer src={project.data.audioUrl} title="Listen to Overview" client:load />
          )}

          <div class="bg-slate-900/40 border border-slate-800/80 rounded-2xl p-6 backdrop-blur-sm">
            <div class="flex items-center gap-2 text-brand-300 font-bold mb-6 font-display">
              <Link className="w-4 h-4" />
              <h3>Project Links</h3>
            </div>
             <div class="flex flex-col gap-3">
              {project.data.demoUrl && (
                <a href={project.data.demoUrl} target="_blank" rel="noreferrer" 
                   class="flex items-center justify-center gap-2 px-4 py-2.5 bg-brand-600 hover:bg-brand-500 text-white font-semibold rounded-lg transition-colors text-sm shadow-lg shadow-brand-900/20">
                  <span>View Live Demo</span>
                  <ArrowUpRight className="w-4 h-4" />
                </a>
              )}
              {project.data.repoUrl && (
                <a href={project.data.repoUrl} target="_blank" rel="noreferrer" 
                   class="flex items-center justify-center gap-2 px-4 py-2.5 bg-slate-800 hover:bg-slate-700 text-white font-semibold rounded-lg transition-colors border border-slate-700 text-sm hover:border-slate-600">
                  <Github className="w-4 h-4" />
                  <span>Source Code</span>
                </a>
              )}
            </div>
          </div>

          <div class="bg-slate-900/40 border border-slate-800/80 rounded-2xl p-6 backdrop-blur-sm">
            <div class="flex items-center gap-2 text-brand-300 font-bold mb-4 font-display">
              <Code2 className="w-4 h-4" />
              <h3>Tech Stack</h3>
            </div>
            <div class="flex flex-wrap gap-2">
              {project.data.techStack.map(tech => (
                 <span class="text-xs font-medium text-slate-300 bg-slate-800/50 px-2.5 py-1 rounded-md border border-slate-700/50">
                    {tech}
                 </span>
              ))}
            </div>
          </div>

           <div class="bg-gradient-to-br from-slate-900/80 to-slate-900/40 border border-slate-800/80 rounded-2xl p-6">
              <h4 class="text-white font-bold text-sm mb-2 font-display">Join the discussion</h4>
              <p class="text-xs text-slate-400 mb-4">
                Feedback on this architecture? Reply via email or Threads.
              </p>
              <a href="https://www.threads.com/@relearn.ing" target="_blank" rel="noreferrer" class="text-xs font-bold text-brand-400 hover:text-brand-300 flex items-center gap-1">
                Discuss on Threads <ArrowRight className="w-3 h-3" />
              </a>
          </div>
        </aside>
      </div>
    </div>
  </section>
</Layout>
