---
import Layout from '../../layouts/Layout.astro';
import { ProjectList } from '../../components/ProjectList';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Projects | relearn.ing">
  <div className="pt-32 pb-24">
    <div className="container mx-auto px-6">
      <div className="max-w-2xl mb-16">
        <p className="text-sm uppercase tracking-[0.3em] text-brand-300 mb-3">Portfolio</p>
        <h1 className="text-4xl md:text-5xl font-display font-bold text-white mb-6">
          Engineering Artifacts
        </h1>
        <p className="text-lg text-slate-300 leading-relaxed">
          Tangible proof of concept. These are not just codebases; they are attempts to instantiate specific cognitive models into software.
        </p>
      </div>

      <ProjectList client:load projects={sortedProjects} />
    </div>
  </div>
</Layout>
